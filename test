services:
  web:
    image: centos
    container_name: nginx
    networks:
      - test_net
    tty: true
  db:
    image: centos
    container_name: mysql
    networks:
      - test_net
    environment:
      - MYSQL_ROOT_PASSWORD=1234
    tty: true
networks:
  test_net:

docker exec nginx bash -c "ping mysql"
docker network create test_net

docker exec mysql bash -c "ping nginx"



